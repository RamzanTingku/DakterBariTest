<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.ramzanullah.dakterbaritest.DoctorFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/background_box"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"

            android:paddingRight="10dp"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/iv_doc_photo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"

                android:src="@drawable/doctor" />

            <TextView
                android:id="@+id/tv_doc_online_status"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Online"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tv_doc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr.Sayed Hossain Shohag"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_doc_degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MBBS"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_doc_speciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cardiologist"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_doc_fees"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fees: 500BDT"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_doc_schedule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2PM-4PM"
                    android:textSize="15sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
