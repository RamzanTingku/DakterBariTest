<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ramzanullah.dakterbaritest.Login.SignupFragment">

    <EditText
        android:id="@+id/et_signup_phoneNo"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:padding="15dp"
        android:background="@drawable/edt_text"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:textColor="@color/colorText"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/et_signup_passWord"
        android:hint="Choose a Password"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:layout_gravity="center"
        android:background="@drawable/edt_text"
        android:textColor="@color/colorText"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/et_reEnter_passWord"
        android:hint="Re-enter  Password"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:layout_gravity="center"
        android:background="@drawable/edt_text"
        android:textColor="@color/colorText"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/btn_signup"
        android:text="Signup"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#13CE66"/>

</LinearLayout>
