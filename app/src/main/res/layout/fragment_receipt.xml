<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_box"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Receipt"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="40dp">

            <ImageView
                android:id="@+id/iv_doc_image"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@drawable/doctor" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_doc_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dr.Sayeed Hossain Shohag"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_doc_fees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fee: 500BDT"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_time_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="10AM-4PM"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date_schedule"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="24/10/2017"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="change date?"
                        android:textSize="15sp"
                        android:textColor="#F98688"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:text="Benifit"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            >

            <ImageView
                android:id="@+id/iv_call_from_doc"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:src="@drawable/call" />

            <TextView
                android:id="@+id/tv_call_from_doc"
                android:text="Doctor will call you"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            >

            <ImageView
                android:id="@+id/iv_vid_chat"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:src="@drawable/vidcall" />

            <TextView
                android:id="@+id/tv_vid_chat"
                android:text="Video Chat with Doctor"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            >

            <ImageView
                android:id="@+id/iv_msg"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:src="@drawable/msg" />

            <TextView
                android:id="@+id/tv_msg"
                android:text="Send Message to Doctor"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"/>

        </LinearLayout>




    </LinearLayout>


    <Button
        android:id="@+id/btn_pay_now"
        android:text="Pay Now"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="#8190A5"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>

   <!-- <Button
        android:id="@+id/btn_pay_later"
        android:text="Pay Later"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="#8190A5"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>-->

</LinearLayout>